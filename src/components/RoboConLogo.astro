---
import "@/globals.css"
interface Props {
    clickable?: boolean;
    href?:string;
}
let { clickable = true, href="/" } = Astro.props
---
<a href={clickable ? href : ""} class="logo" >
    ROBOCON
</a>
<style>
    .logo {
        float:left;
        font-family: "FugazOne";
        font-size: 2em;
        color: var(--rc-red);
        text-decoration: none;
        text-shadow: -0.05em 0.05em black;
        cursor: {clickable ? "auto" : "default"};
    }
</style>